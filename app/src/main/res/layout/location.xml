<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/w_gold">

    <ImageView
        android:id="@+id/locarrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/image1"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <TextView
        android:id="@+id/textView45"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:contentDescription="@string/image1"
        android:text="@string/location"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <ScrollView
        android:layout_width="413dp"
        android:layout_height="765dp"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locarrow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="match_parent"
                android:layout_height="619dp"
                android:src="@drawable/cmap" />

            <TextView
                android:id="@+id/textView46"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="@color/ash_2"
                android:padding="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:text="Enter City"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView47"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:backgroundTint="@color/ash_2"
                android:text="Enter University"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView48"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/ash_2"
                android:text="Rent Type"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/oval_button"
                android:backgroundTint="@color/gold"
                android:text="Continue"
                android:layout_marginBottom="20dp"
                android:textAlignment="center" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>